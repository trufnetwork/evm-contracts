{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist"]
}
