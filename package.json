    "tsx": "^4.19.2",
    "typescript": "5.6.3",
    "vite": "6.0.3",
    "vitest": "2.1.8"
  },
  "files": [
    "dist",
    "contracts/attestation/TrufAttestation.sol",
    "docs/AttestationLibrary.md",
    "README.md",
    "LICENSE"
