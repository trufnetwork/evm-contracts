{
    "compilerOptions": {
      "allowJs": true,
      "module": "CommonJS",
      "target": "es2022",
      "esModuleInterop": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "ts-node": {
      "experimentalResolver": true,
      "files": true
    },
    "include": ["./typechain-types", "./tasks", "./constants", "./src", "./lib",
      "./hardhat.config.cts"
    ]
  }
