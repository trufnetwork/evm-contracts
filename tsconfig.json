{
  "compilerOptions": {
    "allowJs": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@nomicfoundation/hardhat-chai-matchers"],
    "typeRoots": ["./typechain-types", "./node_modules/@types"]
  },
  "ts-node": {
    "experimentalResolver": true,
    "files": true
  },
  "include": [
    "./typechain-types",
    "./tasks",
    "./constants",
    "./src",
    "./lib",
    "./vitest.config.ts",
    "./hardhat.config.cts",
    "test"
  ]
}
